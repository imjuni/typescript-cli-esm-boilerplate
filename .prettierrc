{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "arrowParens": "always",
  "parser": "typescript",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ".eslintrc.cjs",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": [
        ".vscode/**/*.json",
        "tsconfig.*.json",
        "tsconfig.json"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}