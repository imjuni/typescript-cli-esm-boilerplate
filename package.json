{
  "name": "typescript-cli-esm-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript cli esm boilerplate",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "wireit",
    "test": "wireit",
    "clean": "wireit",
    "lint": "wireit",
    "lint-staged": "wireit",
    "build": "wireit",
    "rollup:prod": "wireit",
    "rollup:dev": "wireit",
    "dd": "wireit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/typescript-cli-boilerplate.git"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "nozzle": "dist/cli.js"
  },
  "imports": {
    "#modules/*": "./src/modules/*"
  },
  "bugs": {
    "url": "https://github.com/imjuni/typescript-cli-boilerplate/issues"
  },
  "homepage": "https://github.com/imjuni/typescript-cli-boilerplate#readme",
  "wireit": {
    "dev": {
      "command": "ts-node src/cli.ts"
    },
    "test": {
      "command": "vitest run --coverage"
    },
    "clean": {
      "command": "rimraf dist artifact"
    },
    "build": {
      "command": "tsc --incremental --project tsconfig.prod.json"
    },
    "lint": {
      "command": "eslint --cache ."
    },
    "rollup:dev": {
      "command": "rollup --config ./.configs/rollup.config.dev.ts --configPlugin typescript",
      "dependencies": [
        "clean",
        "lint"
      ]
    },
    "dd": {
      "command": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'"
    },
    "lint-staged": {
      "command": "lint-staged"
    },
    "rollup:prod": {
      "command": "rollup --config ./.configs/rollup.config.prod.ts --configPlugin typescript",
      "dependencies": [
        "clean",
        "lint"
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@swc/core": "^1.3.59",
    "@tsconfig/node16": "^1.0.4",
    "@types/cli-progress": "^3.11.0",
    "@types/node": "^14.18.36",
    "@types/source-map-support": "^0.5.6",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.1",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.2",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^44.2.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "just-task": "^1.7.2",
    "lint-staged": "^13.2.2",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.2",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.22.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-swc3": "^0.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1",
    "wireit": "^0.9.5"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "consola": "^3.1.0",
    "find-up": "^5.0.0",
    "my-easy-fp": "^0.20.3",
    "ora": "^5.4.1",
    "source-map-support": "^0.5.21",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
